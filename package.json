{
  "name": "pothos-codegen",
  "version": "0.1",
  "license": "MIT",
  "description": "A prisma generator that generate input types for Pothos. And optionally generate all crud. Fork of https://github.com/Cauen/prisma-generator-pothos-codegen",
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "module": "./src/index.js",
  "exports": {
    "import": "./src/index.js",
    "require": "./src/index.js"
  },
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "tscheck": "tsc -noEmit",
    "prebuild": "yarn clean",
    "postbuild": "shx cp ./README.md ./dist && shx chmod +x ./dist/src/bin.js",
    "clean": "shx rm -rf dist",
    "pub": "cd dist && npm publish",
    "check-src-and-examples": "yarn test && yarn tscheck && cd examples/inputs-simple-sqlite && yarn generate && yarn tscheck",
    "fullcheck": "yarn check-src-and-examples"
  },
  "bin": {
    "prisma-generator-pothos-codegen": "./src/bin.js"
  },
  "peerDependencies": {
    "@pothos/core": "^4.0.2",
    "@pothos/plugin-prisma": "^4.0.3",
    "@prisma/client": "^5.0.0",
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "@prisma/internals": "6.8.2",
    "@types/jest": "29.5.14",
    "@types/node": "22.15.21",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "29.3.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@prisma/generator-helper": "6.8.2"
  }
}